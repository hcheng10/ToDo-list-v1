<%- include("header") -%>

<div class="box" id="heading">
  <!-- for javascript control flow we could use <%%> -->
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% for (let i=0; i<newListItems.length; i++) { %>
  <div class="item">
    <input type="checkbox">
    <p><%= newListItems[i] %></p>
  </div>
  <% } %>

  <!-- add new toDo items -->
  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off"> <!-- autocomplete="off" to cancel auto fill in broser -->
    <button type="submit" name="list" value=<%= listTitle %>>+</button>
  </form>
</div>

<%- include("footer") -%>
